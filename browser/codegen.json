{
  "overwrite": true,
  "schema": "${API_URL:http://localhost:8080}/graphql",
  "documents": "graphql/**/*.graphql",
  "generates": {
    "graphql/index.ts": {
      "plugins": [
        "typescript",
        "typescript-operations",
        "./typescript-apollo-sdk/build"
      ],
      "config": {
        "imports": ["import dayjs from 'dayjs'"],
        "scalars": { "DateTime": "dayjs#Dayjs" }
      }
    }
  },
  "hooks": {
    "afterAllFileWrite": ["eslint --fix"]
  }
}
