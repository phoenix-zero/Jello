{
  "overwrite": true,
  "schema": "${API_URL:http://localhost:8080}/graphql",
  "documents": "gql/**/*.graphql",
  "generates": {
    "gql/index.ts": {
      "plugins": [
        "typescript",
        "typescript-operations",
        "./typescript-apollo-sdk/build"
      ],
      "config": {
        "scalars": { "DateTime": "string|number" },
        "tsUseEnums": true
      }
    }
  },
  "hooks": {
    "afterAllFileWrite": ["eslint --fix"]
  }
}
